
@{
    ViewBag.Title = "_Search";
}
@using (Html.BeginForm("Index", "BlogPosts", FormMethod.Post, new { @id = "frmBlogSearch", @class = "form-inline" }))
{
    @Html.AntiForgeryToken()

    <div class="row">
        <div class="col-xs-3 pull-right">
            <div class="form-group">
                <input type="text" class="form-control form-inline input-sm" id="searchStr" placeholder="search blog" name="searchStr">
                <button class="btn btn-default pull-right" type="submit">
                    <span class="glyphicon glyphicon-search" style="font-size: 21px;"></span>
                </button>
            </div>
        </div>
    </div>
}

