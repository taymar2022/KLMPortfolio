                }
                else if (d > a && d > b && d > c && d > e) {
                $ ('#result').text(d + " is the greatest number");
                }
                else if (e > a && e > b && e > c && e > d) {
                $('#result').text(e + " is the greatest number");
                }

                if (a < b && a < c && a < d && a < e) {
                $('#result').text(a + " is the least number");
                }
                else if (b < a & b < c && b < d && b < e) {
                $('#result').text(b + " is the least number");
                }
                else if  (c < a && c < b && c < d && c < e) {
                $('#result').text(c + " is the least number");
                }
                else if (d < a && d < b && d < c && d < e) {
                $ ('#result').text(d + " is the least number");
                }
                else if (e < a && e < b && e < c && e < d) {
                $('#result').text(e + " is the least number");
                }

                var prod = a*b*c*d*e;
                $('#result').append(prod + " is the product");

                var sum = a+b+c+d+e;
                $('#result').append(sum + " is the sum");

                var mean =(sum/5);
                $('#result').append(mean + " is the mean");

