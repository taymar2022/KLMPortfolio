                var c = parseInt($('input[name=num3]').val());
                var d = parseInt($('input[name=num4]').val());
                var e = parseInt($('input[name=num5]').val());

                if (a > b && a > c && a > d && a > e) {
                $('#result').text(a + " is the greatest number");
