@model IEnumerable<KLMPortfolio.Models.BlogPost>
<div class="bg-light pt-160 pb-160">
    <table class="table">
        <tr>
            <th>@Html.DisplayNameFor(model => model.Created)</th>
            <th>@Html.DisplayNameFor(model => model.Updated)</th>
            <th>@Html.DisplayNameFor(model => model.Title)</th>
            <th>@Html.DisplayNameFor(model => model.Slug)</th>
            <th>@Html.DisplayNameFor(model => model.Body)</th>
            <th>@Html.DisplayNameFor(model => model.MediaUrl)</th>
            <th>@Html.DisplayNameFor(model => model.Published)</th>
            <th>@Html.ActionLink("Create New", "Create")</th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Created)</td>
                <td>@Html.DisplayFor(modelItem => item.Updated)</td>
                <td>@Html.DisplayFor(modelItem => item.Title)</td>
                <td>@Html.DisplayFor(modelItem => item.Slug)</td>
                <td>@Html.DisplayFor(modelItem => item.Body)</td>
                <td>@Html.DisplayFor(modelItem => item.MediaUrl)</td>
                <td>@Html.DisplayFor(modelItem => item.Published)</td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }
    </table>
</div>